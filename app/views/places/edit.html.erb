<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Edit Your Place</h1> <br>
  <%= simple_form_for @place do |f| %>
    <%= f.input :name, error: 'The name of the place is too short (minimum is 3 characters' %>
    <%= f.input :address %>
    <%= f.input :description %>
    <br>
    <%= f.submit 'Update', class: 'btn btn-primary' %>

  <% end %>

</div>