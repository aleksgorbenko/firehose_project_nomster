<div class="booyah-box col-xs-12 col-sm-10 col-md-8 col-lg-8 col-sm-offset-1 col-md-offset-2 col-lg-offset-2">


  <div class="col-xs-3 col-xs-offset-">
    <%= image_tag 'user.png' %>
  </div>

  <div class="col-xs-7">
    <h1><%= @user.email %></h1>
      <br>

    <h3>Member since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
      <br>
      <br>

    <h4><%= @user.comments.count %> total comments</h4>
      <br>
    <h4><%= @user.comments.where(rating: '5_stars').count %> total 5-star reviews</h4>
  </div>
  <div class="clear"></div>
</div>